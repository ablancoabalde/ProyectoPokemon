<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Interfaz">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/instinto"
            android:scaleType="centerCrop"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:gravity="end">

            <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/btn_ver"
                    android:background="@drawable/btn_redondeado_red"
                    android:drawableTop="@drawable/ic_ver"
                    android:paddingTop="14dp"
                    android:textColor="@color/white"
                    android:textSize="16dp"/>

        </LinearLayout>


        <TextView
                android:layout_marginTop="10dp"
                android:text="Que Pokémon quieres cambiar?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lblInfo"
                android:textColor="@color/red"
                android:textSize="16dp"        />

        <android.support.design.widget.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tilNPokemon"
                android:layout_marginTop="225sp"
                android:textColorHint="@color/red"
                app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
                android:layout_marginTop="10sp"
                android:layout_marginBottom="20sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Pokémon"
                android:textColor="@color/red"
                android:textColorHint="@color/red"
                android:id="@+id/txtPokemon"
                android:inputType="textCapWords"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tilCantidad"
                android:textColorHint="@color/red"
                app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                    android:layout_marginBottom="15sp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cantidad"
                    android:textColor="@color/red"
                    android:textColorHint="@color/red"
                    android:id="@+id/txtCantidad"
                    android:inputType="number"/>

        </android.support.design.widget.TextInputLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:gravity="end"
                      android:layout_marginBottom="10dp">

            <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/btn_mas"
                    android:text="+"
                    android:background="@drawable/btn_redondeado_red"
                    android:textColor="@color/white"
                    android:textSize="25dp"/>

        </LinearLayout>

        <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_enviar"
                android:text="Enviar"
                android:background="@drawable/btn_redondeado_red"
                android:textColor="@color/white"
                android:textSize="16dp"/>


    </LinearLayout>

</RelativeLayout>